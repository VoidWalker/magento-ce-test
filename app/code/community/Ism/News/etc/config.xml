<?xml version="1.0"?>

<config>
    <modules>
        <Ism_News>
            <version>0.1.0</version>
        </Ism_News>
    </modules>
    <frontend>
        <routers>
            <news>
                <use>standard</use>
                <args>
                    <module>Ism_News</module>
                    <frontName>news</frontName>
                </args>
            </news>
        </routers>
    </frontend>
    <global>
        <models>
            <news>
                <class>Ism_News_Model</class>
                <resourceModel>news_resource</resourceModel>
            </news>
            <news_resource>
                <class>Ism_News_Model_Resource</class>
                <entities>
                    <news>
                        <table>ism_news</table>
                    </news>
                </entities>
            </news_resource>
        </models>
        <resources>
            <news_setup>
                <setup>
                    <module>Ism_News</module>
                    <class>Ism_News_Model_Resource_Setup</class>
                </setup>
            </news_setup>
        </resources>
        <helpers>
            <news>
                <class>Ism_News_Helper</class>
            </news>
        </helpers>
    </global>
</config>
