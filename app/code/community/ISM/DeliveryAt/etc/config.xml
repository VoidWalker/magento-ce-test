<?xml version="1.0"?>

<config>
    <modules>
        <ISM_DeliveryAt>
            <version>0.1.0</version>
        </ISM_DeliveryAt>
    </modules>
    <global>
        <models>
            <delivery_at>
                <class>ISM_DeliveryAt_Model</class>
            </delivery_at>
        </models>
        <blocks>
            <delivery_at>
                <class>ISM_DeliveryAt_Block</class>
            </delivery_at>
        </blocks>
        <helpers>
            <delivery_at>
                <class>ISM_DeliveryAt_Helper</class>
            </delivery_at>
        </helpers>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <delivery_at>
                        <type>singleton</type>
                        <class>delivery_at/observer</class>
                        <method>onCoreBlockAbstractToHtmlAfter</method>
                    </delivery_at>
                </observers>
            </core_block_abstract_to_html_after>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <delivery_at>
                    <file>delivery_at.xml</file>
                </delivery_at>
            </updates>
        </layout>
    </frontend>

    <default>
        <delivery_at>
            <general>
                <enabled>1</enabled>
            </general>
        </delivery_at>
        <time_field>
            <enabled>1</enabled>
        </time_field>
    </default>
</config>
