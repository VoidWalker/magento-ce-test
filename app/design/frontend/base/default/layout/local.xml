<?xml version="1.0"?>

<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addJs">
                <script>test/test.js</script>
            </action>
        </reference>
        <reference name="top.links">
            <action method="addLink" translate="label title">
                <label>Sohan CMS</label>
                <url>about-magento-demo-store</url>
                <title>Sohan CMS</title>
                <prepare>true</prepare>
                <urlParams/>
                <position>105</position>
            </action>
        </reference>
    </default>

    <cms_index_index translate="label">
        <label>CMS Home Page</label>
        <reference name="head">
            <action method="setTitle" translate="title" module="contacts">
                <title>Custom Layout Works</title>
            </action>
        </reference>
        <remove name="footer.newsletter"/>
    </cms_index_index>

    <catalog_product_view>
        <reference name="product.info">
            <block type="core/template" name="custom_template" template="catalog/product/sohan.phtml"/>
        </reference>
    </catalog_product_view>
</layout>
